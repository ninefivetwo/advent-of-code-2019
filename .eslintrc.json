{
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "extends": ["eslint:recommended", "plugin:mocha/recommended"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "extends": "standard",
        "parser": "babel-eslint",
        "sourceType": "module"
    },
    "plugins": ["mocha"],
    "rules": {
        "indent": ["error", 4],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"]
    }
}
